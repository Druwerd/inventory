<h2>Reference Sites</h2>
<table class="sites">
  <tr>
    <th>Name</th>
	<th>Page Rank</th>
	<th>Load Time</th>
	<th>Last Updated</th>
  </tr>
<% @reference_sites.each do |site| %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><%= site.name %></td>
	<td><%= show_page_rank(site) %></td>
	<td><%= site.load_time %></td>
	<td><%= site.updated_at.strftime("%Y-%m-%d") %></td>
  </tr>
<% end %>
<% reset_cycle() %>
</table>

